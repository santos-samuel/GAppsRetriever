<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnChangeColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Color"
        tools:text="Change Color" />

    <Button
        android:id="@+id/btnChangeFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Fragment"
        tools:text="Change Fragment" />

    <Button
        android:id="@+id/btnGoToApkAnalyzer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to ApkAnalyzer"
        tools:text="Go to ApkAnalyzer" />

    <Button
        android:id="@+id/btnIterateSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iterate Settings"
        tools:text="Go to ApkAnalyzer" />
</LinearLayout>