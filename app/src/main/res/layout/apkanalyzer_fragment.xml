<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSearchFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search File"
        tools:text="Search File" />

    <LinearLayout
        android:id="@+id/linearLayoutSelectedFile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected File :"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txtViewSelectedFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnInspectApk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InpectAPK"
            tools:text="InpectAPK"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>